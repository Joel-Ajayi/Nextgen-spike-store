{
  "name": "flipkart-backend",
  "version": "1.0.0",
  "description": "backend of flipkart project by Ayotunde",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc && npm run build --prefix client",
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/index.ts",
    "dev:typecheck": "tsc --noEmit --watch",
    "prebuild": "npm install --prefix client",
    "client-build": "npm run build --prefix client",
    "generate": "prisma generate --schema=src/db/prisma/schema.prisma && prisma db push --schema=src/db/prisma/schema.prisma",
    "postinstall": "npm -s run generate",
    "heroku-postbuild": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.21.0",
    "@sendgrid/mail": "^8.1.4",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "connect-mongo": "^4.6.0",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.2.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "form-data": "^4.0.0",
    "graphql": "^16.8.1",
    "graphql-upload": "^15.0.1",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.3.5",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^3.3.4",
    "nexus": "^1.3.0",
    "prisma-extension-random": "^0.2.2",
    "remove.bg": "^1.3.0",
    "slugify": "^1.6.5",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.18",
    "@types/express": "^4.17.21",
    "@types/graphql-upload": "^15.0.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.45",
    "@types/uuid": "^9.0.0",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.16",
    "prisma": "^5.21.0",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": "16.20.2"
  }
}